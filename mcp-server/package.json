    "eslint": "^9.15.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.20.2",
    "consola": "^3.4.2",
    "express": "^4.18.2",
